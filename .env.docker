# Docker Environment Configuration
# Copy this file to .env when using Docker

# Database Configuration (for Docker)
DB_NAME=rand_refinary
DB_USER=postgres
DB_PASSWORD=secure_password_change_this
DB_HOST=db
DB_PORT=5432

# Flask Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production
FLASK_ENV=production
FLASK_APP=app.py
FLASK_DEBUG=False

# Application Settings
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600

# Docker-specific settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Optional: For production with DATABASE_URL
# DATABASE_URL=postgresql://postgres:password@db:5432/rand_refinary
